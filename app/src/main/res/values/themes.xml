<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.StudyAssistant" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:statusBarColor">@color/white</item>

        <item name="android:forceDarkAllowed">false</item>
        <item name="elevationOverlayEnabled">false</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <item name="textInputStyle">@style/App.TextInputLayout</item>


        <item name="android:indeterminateTint">@color/brand_primary</item>

    </style>

<!--    <style name="Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">-->
<!--        <back-->
<!--    </style>-->

    <style name="RoundedCard">
        <item name="cornerSize">24dp</item>
    </style>


    <style name="ToggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <!-- Selected background -->
        <item name="backgroundTint">@color/upload_toggle_bg_selector</item>

        <!-- Text & icon color -->
        <item name="iconTint">@color/upload_toggle_text_selector</item>
        <item name="android:textColor">@color/upload_toggle_text_selector</item>

    </style>


    <style name="App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">@dimen/radius_text_input</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_text_input</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_text_input</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_text_input</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/brand_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <style name="Material.Toolbar.Title.Bold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.StudyAssistant" parent="Base.Theme.StudyAssistant" />

</resources>
