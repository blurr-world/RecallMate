<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvSummarySelection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="@dimen/elevation_card"
    app:strokeColor="@color/brand_primary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Cell Biology Fundamentals" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSummaryDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                tools:text="Introduction to eukaryotic cell structures, organelles, and basic metabolic pathways within" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSummaryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAllCaps="true"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                tools:text="OCT 12, 2023" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSelectedIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_check_small"
            app:tint="@color/brand_primary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>