<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    app:cardElevation="@dimen/elevation_card_clickable"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/cvItemFlashcardSetMain"
    app:strokeWidth="0dp"
    app:cardCornerRadius="@dimen/radius_card"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <ImageView-->
<!--            android:id="@+id/imgItemFlashcardSetMenu"-->
<!--            android:src="@drawable/ic_three_dots"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:layout_gravity="end"-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="20dp"/>-->

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFlashcardItemTitle"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="@string/txt_summary_dummy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#F3F4F6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtFlashcardItemCount"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textFontWeight="700"
                    android:text="@string/txt_flashcards"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFlashcardItemDate"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_muted"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/TextAppearance.Material3.BodySmall"
                android:textFontWeight="450"
                android:text="@string/txt_summary_dummy_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </FrameLayout>



</com.google.android.material.card.MaterialCardView>