<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Generated Study Pack"
        app:titleTextAppearance="@style/Material.Toolbar.Title.Bold"
        android:id="@+id/mtbUploadResultMain"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:titleCentered="true"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdUploadResultIgnore1"
        app:layout_constraintTop_toBottomOf="@id/mtbUploadResultMain"
        app:dividerColor="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.google.android.material.textview.MaterialTextView
        app:layout_constraintTop_toBottomOf="@id/mdUploadResultIgnore1"
        android:id="@+id/llUploadResultErrorView"
        android:text="Somethign went wrong, please try again later."
        android:gravity="center"
        android:textSize="18sp"
        android:paddingHorizontal="100dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/mdUploadResultIgnore2"
        android:layout_height="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/mdUploadResultIgnore1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:id="@+id/rvUploadResult"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/mdUploadResultIgnore2"
        android:layout_height="0dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdUploadResultIgnore2"
        app:layout_constraintBottom_toTopOf="@id/llUploadResultIgnore"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/divider"/>

    <LinearLayout
        android:padding="8dp"
        android:id="@+id/llUploadResultIgnore"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@color/brand_primary"
            android:text="@string/txt_save_to_library"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconSize="20dp"
            android:layout_marginHorizontal="16dp"
            android:id="@+id/btnUploadResultSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
