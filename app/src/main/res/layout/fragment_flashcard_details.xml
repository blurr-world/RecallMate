<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mtbFlashcardDetails"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Flashcard Details"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Material.Toolbar.Title.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdFlashcardDetailsIgnore"
        app:layout_constraintTop_toBottomOf="@id/mtbFlashcardDetails"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/divider"/>

    <ProgressBar
        android:id="@+id/pbFlashcardDetails"
        app:layout_constraintTop_toBottomOf="@id/mdFlashcardDetailsIgnore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFlashcardDetails"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mdFlashcardDetailsIgnore"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <com.google.android.material.textview.MaterialTextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtFlashcardDetailsCounter"
            android:layout_marginTop="16dp"
            android:text="@string/txt_flashcard_details_counter"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            app:layout_constraintTop_toBottomOf="@id/txtFlashcardDetailsCounter"
            android:layout_marginTop="4dp"
            android:max="5"
            app:indicatorColor="@color/brand_primary"
            android:indeterminate="false"
            android:progress="3"
            android:id="@+id/lpiFlashcardDetails"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/llFlashcardDetailsMain"
            app:layout_constraintTop_toBottomOf="@id/lpiFlashcardDetails"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvFlashcardDetailsQ"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/elevation_card_clickable"
                app:strokeWidth="0dp"
                app:cardCornerRadius="@dimen/radius_card"
                android:visibility="visible"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:padding="48dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:minHeight="250dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/txtFlashcardDetailsQ"
                        android:textSize="20sp"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvFlashcardDetailsA"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:visibility="gone"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:padding="48dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:minHeight="250dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/txtFlashcardDetailsA"
                        android:textSize="19sp"
                        android:text="@string/long_string"
                        android:textColor="@color/text_secondary"
                        android:lineHeight="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toTopOf="@id/msFlashcardDetailsMark"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                app:strokeWidth="1dp"
                android:id="@+id/btnFlashcardPrevious"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/txt_previous"
                app:cornerRadius="@dimen/radius_button"
                app:strokeColor="@color/brand_primary"
                android:textColor="@color/brand_primary"
                app:iconTint="@color/brand_primary"
                app:icon="@drawable/ic_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                app:backgroundTint="@color/brand_primary"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                android:id="@+id/btnFlashcardNext"
                app:cornerRadius="@dimen/radius_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="end"
                android:text="@string/txt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/msFlashcardDetailsMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:text="@string/txt_mark_completion"
            android:textStyle="bold"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>