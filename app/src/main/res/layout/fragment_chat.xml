<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/black"
        android:id="@+id/mtbMainChat"
        app:title="AI Tutor"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Material.Toolbar.Title.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdChatIgnore"
        app:dividerColor="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/mtbMainChat"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/rvChatMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/flChatMain"
        app:layout_constraintTop_toBottomOf="@id/mdChatIgnore" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llChatExampleQuery"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/flChatMain"
        app:layout_constraintTop_toBottomOf="@id/mdChatIgnore" >

        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            app:cardElevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtChatFirstQuery"
                android:padding="12dp"
                android:textSize="20sp"
                android:text="@string/txt_chat_first_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            app:cardElevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtChatSecondQuery"
                android:padding="12dp"
                android:textSize="20sp"
                android:text="@string/txt_chat_second_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            app:cardElevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtChatThirdQuery"
                android:padding="12dp"
                android:textSize="20sp"
                android:text="@string/txt_chat_third_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintBottom_toTopOf="@id/flChatMain"
        app:dividerColor="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <FrameLayout
        android:id="@+id/flChatMain"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            app:cardCornerRadius="@dimen/radius_text_input"
            app:cardElevation="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llChatFileName"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:text="@string/app_name"
                            android:id="@+id/txtChatFileName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                        <ImageButton
                            android:contentDescription="@string/txt_chat_clear_file"
                            android:id="@+id/btnChatClearFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_cross"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="@color/divider"/>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ilChatMain"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeColor="@null"
                    app:boxBackgroundColor="@null"
                    app:boxCornerRadiusBottomEnd="@dimen/radius_text_input"
                    app:boxCornerRadiusTopStart="@dimen/radius_text_input"
                    app:boxCornerRadiusTopEnd="@dimen/radius_text_input"
                    app:boxCornerRadiusBottomStart="@dimen/radius_text_input"
                    app:startIconDrawable="@drawable/ic_attach"
                    android:layout_width="match_parent"
                    app:hintEnabled="false"
                    app:startIconTint="@color/black"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etChatMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/txt_chat_type_message"
                        android:inputType="text"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:alpha=".70"

            android:id="@+id/btnChatSendMessage"
            style="@style/Widget.Material3.MaterialTimePicker.ImageButton"
            app:backgroundTint="@color/brand_primary"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:iconSize="28dp"
            app:iconTint="@color/white"
            android:layout_gravity="end|center"
            app:icon="@drawable/ic_send"
            app:cornerRadius="24dp"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>