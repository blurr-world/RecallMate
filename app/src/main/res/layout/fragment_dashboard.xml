<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mtbDashboard"
        app:title="Study Assistant"
        app:titleTextColor="@color/brand_primary"
        app:titleTextAppearance="@style/Material.Toolbar.Title.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.divider.MaterialDivider
        app:dividerColor="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingHorizontal="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtGreetingDash"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:text="@string/txt_dash_greet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="32dp"
                    android:text="@string/txt_dash_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                app:strokeWidth="0dp"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_card_clickable"
                app:cardBackgroundColor="@color/brand_primary"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="@string/txt_dash_create_stack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="@string/txt_dash_upload_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cvQuickLinkUpload"
                        app:backgroundTint="@color/white"
                        android:text="@string/txt_dash_upload_material"
                        android:textColor="@color/brand_primary"
                        android:layout_marginTop="16dp"
                        app:cornerRadius="@dimen/radius_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    app:strokeWidth="0dp"
                    android:id="@+id/cvQuickLinkChat"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="16dp"
                    app:cardElevation="@dimen/elevation_card_clickable"
                    android:layout_marginEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        
                        <ImageView
                            android:contentDescription="@string/txt_chat"
                            android:src="@drawable/ic_chat"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:tint="@color/brand_primary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_marginTop="4dp"
                            android:text="@string/txt_dash_ask_ai"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_marginTop="4dp"
                            android:text="@string/txt_dash_ai_message"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    app:strokeWidth="0dp"
                    android:id="@+id/cvQuickLinkLibrary"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    app:cardElevation="@dimen/elevation_card_clickable"
                    app:cardCornerRadius="@dimen/radius_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            app:tint="@color/brand_primary"
                            android:contentDescription="@string/txt_library"
                            android:src="@drawable/ic_library"
                            android:layout_width="32dp"
                            android:layout_height="32dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_marginTop="4dp"
                            android:text="@string/txt_my_library"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_marginTop="4dp"
                            android:text="@string/txt_dash_lib_message"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                app:strokeWidth="0dp"
                android:layout_marginTop="4dp"
                android:visibility="visible"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/cvQuickLinkMCQ"
                app:cardElevation="@dimen/elevation_card_clickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    >

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/txt_chat"
                        android:src="@drawable/ic_help"
                        app:tint="@color/brand_primary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/txt_dash_generate_mcq"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/txt_dash_mcq_message"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>